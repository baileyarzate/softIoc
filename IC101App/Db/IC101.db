record(mbbo, "$(P)$(R)Mode")
{
    field(DESC, "Device mode")
    field(DTYP, "stream")
    field(ZRST, "Off")
    field(ZRVL, "0")
    field(ONST, "DC")
    field(ONVL, "1")
    field(TWST, "External Trigger")
    field(TWVL, "2")
    field(THST, "CW Pulses")
    field(THVL, "3")
    field(OUT, "@sydor.proto setMode $(PORT)")
