record(stringin, "$(P)$(R)Version")
{
    field(DESC, "Read version number of sydor PBG monitor")
    field(DTYP, "stream")
    field(INP, "@sydor.proto getVersion $(PORT)")
    field(PINI, "YES")
    field(SCAN, "Passive")
}


record(stringout, "$(P)$(R)DebugCommand")
{
    field(DESC, "Enter debug commands")
    field(DTYP, "stream")
    field(OUT, "@sydor.proto debug($(P)$(R)DebugCommandResponse) $(PORT)")
    field(VAL, "VR?")
    field(PINI, "YES")
    field(SCAN, "Passive")
}


record(stringin, "$(P)$(R)DebugCommandResponse")
{
    field(DESC, "Response from Debug command")
}


record(bo, "$(P)$(R)Polarity")
{
    field(DESC, "Device polarity")
    field(DTYP, "stream")
    field(OUT, "@sydor.proto setPolarity $(PORT)")
    field(ZNAM, "Negative")
    field(ONAM, "Positive")
    field(VAL, "0")
    field(PINI, "NO")
    field(SCAN, "Passive")
}


record(ao, "$(P)$(R)Amplitude")
{
    field(DESC, "Device amplitued 0-100")
    field(DTYP, "stream")
    field(OUT, "@sydor.proto setAmplitude $(PORT)")
    field(LOW, "0.0")
    field(HIGH, "100.0")
    field(LSV, "MAJOR")
    field(HSV, "MAJOR")
    field(VAL, "0.0")
    field(PINI, "NO")
