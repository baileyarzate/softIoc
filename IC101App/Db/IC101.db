    field(PINI, "NO")
    field(SCAN, "Passive")
}


record(stringout, "$(P)$(R)GetThermocouples")
{
    field(DESC, "PV for reading thermocouple values") 
    field(DTYP, "stream")
    field(VAL, "QT?")
    field(PINI, "YES")
    field(OUT, "@sydor.proto getThermocouples($(P)$(R)ThermocoupleW,$(P)$(R)ThermocoupleX,$(P)$(R)ThermocoupleY,$(P)$(R)ThermocoupleZ) $(PORT)") 
    field(SCAN, "10 second")
}


record(stringin,"$(P)$(R)ThermocoupleW")
{
    field(DESC, "Cold Plate")
}

record(stringin, "$(P)$(R)ThermocoupleX"){
    field(DESC, "Channel C PK102 Copper Block")
}

record(stringin, "$(P)$(R)ThermocoupleY"){
    field(DESC, "Molybdenum Mask")
}

record(stringin, "$(P)$(R)ThermocoupleZ")
{
    field(DESC, "Channel A PK68 Copper Block")
}

